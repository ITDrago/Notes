﻿@using Notes.Views.Register;
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}
<style>
    body {
        background-color: #a2a73ed9;
        width: 100%;
        height: 100%;
        overflow: hidden;
        margin: 0;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        font-family: 'Open Sans Condensed', sans-serif;
    }

    .row1 {
        width: 100%;
        height: 100%;
        position: fixed;
        top: -88px;
        left: 0;
        display: flex;
        align-items: center;
        align-content: center;
        justify-content: center;
        overflow: auto;
    }

    .wrapper {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    a {
        display: block;
        width: 200px;
        height: 40px;
        line-height: 40px;
        font-size: 18px;
        font-family: sans-serif;
        text-decoration: none;
        color: #333;
        border: 2px solid #333;
        letter-spacing: 2px;
        text-align: center;
        position: relative;
        transition: all .35s;
    }

        a span {
            position: relative;
            z-index: 2;
        }

        a:after {
            position: absolute;
            content: "";
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background: #c93131;
            transition: all .35s;
        }

        a:hover {
            color: #fff;
        }

            a:hover:after {
                width: 100%;
            }
</style>
<div class="row1">
    <div class="col-md-6 offset-3" style="margin-right: 7%;">
        <p>
            <h4 style="width: 100%;
                       margin-bottom: 61px;
                       margin-left: 287px;
                       font-size: 30px;
                       font-family: sans-serif;
                       text-decoration: none;
                       color: #333;">
                Register
            </h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger" style="margin-bottom: 30px;
                                                             font-size: 20;
                                                             color: #a31c1c;">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="margin-left:-50px;">
                        <label asp-for="EmailAddress" class="control-label" style="font-size: 25px;
                                                                                   font-family: sans-serif;
                                                                                   text-decoration: none;
                                                                                   color: #333;"></label>
                        <input asp-for="EmailAddress" class="form-control" style="width: 500px;
                                                                                  height: 40px;
                                                                                  border:3px solid #b16d18;
                                                                                  box-shadow:0 0 15px 4px rgba(0,0,0,0.06);
                                                                                  font-family:sans-serif;
                                                                                  font-size: 18px;" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-top: 12px;">
                        <label asp-for="Password" class="control-label" style="font-size: 25px;
                                                                               font-family: sans-serif;
                                                                               text-decoration: none;
                                                                               color: #333;"></label>
                        <input asp-for="Password" class="form-control" style="width: 500px;
                                                                              height: 40px;
                                                                              border: 3px solid #b16d18;
                                                                              box-shadow:0 0 15px 4px rgba(0,0,0,0.06);
                                                                              font-family:sans-serif;
                                                                              font-size: 18px;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-left: -92px;
                                                   margin-top: 10px;">
                        <label asp-for="ConfirmPassword" class="control-label" style="font-size: 25px;
                                                                               font-family: sans-serif;
                                                                               text-decoration: none;
                                                                               color: #333;"></label>
                        <input asp-for="ConfirmPassword" class="form-control" style="width: 500px;
                                                                              height: 40px;
                                                                              border: 3px solid #b16d18;
                                                                              box-shadow:0 0 15px 4px rgba(0,0,0,0.06);
                                                                              font-family:sans-serif;
                                                                              font-size: 18px;" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="wrapper" style="margin-top: 124px; margin-left: -29px;">
                        <input class="btn btn-outline-success float right" type="submit" style="display: block;
                                                                                                width: 204px;
                                                                                                height: 40px;
                                                                                                line-height: 40px;
                                                                                                font-size: 18px;
                                                                                                font-family: sans-serif;
                                                                                                text-decoration: none;
                                                                                                color: #333;
                                                                                                border: 2px solid #333;
                                                                                                letter-spacing: 2px;
                                                                                                text-align: center;
                                                                                                position: relative;
                                                                                                transition: all .35s;
                                                                                                background-color: #b56749e3;" value="Register" />

                        <a href="/Home/Index" style="margin-top: 6px;"><span>Cancel</span></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>